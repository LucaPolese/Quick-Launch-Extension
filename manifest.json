{
    "manifest_version": 2,
    "name": "Quick URL launcher",
    "version": "1.0.0",
    "description": "Chrome extension to quick launch a custom list of urls simultaneously",
    "permissions": [
        "tabs", "<all_urls>", "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "browser_action": {
        "default_title": "Quick URL launcher",
        "default_popup": "quick.html",
        "default_icon": {
            "32": "icon32.png"
        }
    },
    "icons": { "32": "icon32.png" }
}